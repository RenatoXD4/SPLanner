generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

/// //////////////////////////// CONFIG DATABASE
model Usuario {
  id               String         @id @default(uuid())
  nombre           String
  apellido         String
  email            String         @unique
  password         String
  createdAt        DateTime       @default(now())
  comentarios      Comentario[]
  miembroDe        Miembro[]
  notificaciones   Notificacion[]
  proyectosCreados Proyectos[]    @relation("ProyectosCreados")
  responsableDe    Responsable[]

  @@schema("public")
}

model Proyectos {
  id          String    @id @default(uuid())
  nombre      String
  descripcion String?
  createdAt   DateTime  @default(now())
  creadoPorId String
  estados     Estado[]
  miembros    Miembro[]
  creadoPor   Usuario   @relation("ProyectosCreados", fields: [creadoPorId], references: [id])
  tareas      Tarea[]

  @@schema("public")
}

model Tarea {
  id              String            @id @default(uuid())
  titulo          String?           @db.VarChar(255)
  posicion        Int               @default(0)
  createdAt       DateTime          @default(now())
  proyectoId      String
  estadoId        Int
  fechaLimite     DateTime?         @db.Date
  BloqueContenido BloqueContenido[]
  comentarios     Comentario[]
  notificaciones  Notificacion[]
  responsables    Responsable[]
  estado          Estado            @relation(fields: [estadoId], references: [id])
  proyecto        Proyectos         @relation(fields: [proyectoId], references: [id], onDelete: Cascade)
  etiquetas       TareasEtiquetas[]

  @@schema("public")
}

/// //// BLOQUE MANIPULA EL ORDEN DE COMPONENTES DENTRO DE UNA TAREA > ej: un titulo no especificamente debe de aparecer de los primeros, se podria mover al final de la desc de la tarea
model BloqueContenido {
  id        String       @id @default(uuid())
  tareaId   String
  tipo      TipoDeBloque
  contenido String
  posicion  Int
  tarea     Tarea        @relation(fields: [tareaId], references: [id], onDelete: Cascade)

  @@index([tareaId, posicion])
  @@schema("public")
}

model Roles {
  id       Int       @id @default(autoincrement())
  nombre   String    @unique @db.VarChar(50)
  miembros Miembro[]

  @@schema("public")
}

model Miembro {
  id         Int       @id @default(autoincrement())
  usuarioId  String
  proyectoId String
  rolId      Int
  proyecto   Proyectos @relation(fields: [proyectoId], references: [id], onDelete: Cascade)
  rol        Roles     @relation(fields: [rolId], references: [id])
  usuario    Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@unique([usuarioId, proyectoId])
  @@schema("public")
}

model Estado {
  id         Int       @id @default(autoincrement())
  nombre     String    @db.VarChar(50)
  /// POSICIÃ“N EN EL ARRAY
  posicion   Int
  proyectoId String
  proyecto   Proyectos @relation(fields: [proyectoId], references: [id], onDelete: Cascade)
  tareas     Tarea[]

  @@schema("public")
}

model Responsable {
  id        Int     @id @default(autoincrement())
  tareaId   String
  usuarioId String
  tarea     Tarea   @relation(fields: [tareaId], references: [id], onDelete: Cascade)
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@unique([tareaId, usuarioId])
  @@schema("public")
}

model Comentario {
  id        Int      @id @default(autoincrement())
  contenido String
  createdAt DateTime @default(now())
  tareaId   String
  usuarioId String
  tarea     Tarea    @relation(fields: [tareaId], references: [id], onDelete: Cascade)
  autor     Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Notificacion {
  id        Int      @id @default(autoincrement())
  tipo      String   @db.VarChar(50)
  mensaje   String
  leida     Boolean  @default(false)
  createdAt DateTime @default(now())
  usuarioId String
  tareaId   String?
  tarea     Tarea?   @relation(fields: [tareaId], references: [id], onDelete: Cascade)
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Etiqueta {
  id     Int               @id @default(autoincrement())
  nombre String            @unique @db.VarChar(50)
  tareas TareasEtiquetas[]

  @@schema("public")
}

model TareasEtiquetas {
  tareaId    String
  etiquetaId Int
  etiqueta   Etiqueta @relation(fields: [etiquetaId], references: [id], onDelete: Cascade)
  tarea      Tarea    @relation(fields: [tareaId], references: [id], onDelete: Cascade)

  @@id([tareaId, etiquetaId])
  @@schema("public")
}

enum TipoDeBloque {
  PARAGRAPH
  HEADING_1
  HEADING_2
  CHECKLIST
  IMAGE
  CODE

  @@schema("public")
}
